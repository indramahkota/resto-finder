{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "declarationDir": "dist/types",
        "declaration": true,
        "target": "es2017",
        "module": "es2015",
        "strict": true,
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "declarationMap": true, //true: dev | prod: false
        "sourceMap": true, //true: dev | prod: false
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}